<view class="page">
  <view class="page__hd">
    <view class="avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="nickName">
      <open-data type="userNickName"></open-data>
    </view>
  </view>
  <view class="page__bd">
      <view class="list">
        <view class="list-item">
           <image class="list-item-img" src="/mocks/img/address.png"></image> 
          <view class="list-item-text">{{country}} {{province}} {{city}}</view>
        </view>
        <view class="list-item">
          <image class="list-item-img" src="/mocks/img/description.png"></image> 
          <view class="list-item-text">{{description}}</view>
        </view>
        <view class="list-item">
        </view>
    </view>
  </view>
</view>
