<!--detail.wxml-->
<view class="page">
  <view class="page__hd">
    <view class='title'>{{title}}</view>
  </view>
  <view class="page__bd">
    <view class='map'>
      <image class='map-image' src="{{map[count]}}" mode="aspectFit"></image>
    </view>
    <view class='button'>
      <button wx:for="{{day}}" wx:key="{{item}}" id="{{item}}" type="{{buttonType[item-1]}}" plain="true" bindtap='changeDay'>D{{item}}</button>
    </view>
    <view class='route'>
      <text class='route-text'>{{route[count]}}</text>
    </view>
  </view>
  <view class="bar">
    <image class="bar-icon" src="{{starUrl}}" bindtap="changeStar"></image>
    <image class="bar-icon" src="/mocks/img/comment.png"></image>
  </view>
</view>