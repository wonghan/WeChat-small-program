<!--detail.wxml-->
<view class="page">
   <view class="page__hd">
    <view class='title'>{{title}}</view>
  </view>
  <view class="page__bd">
    <view class='map'>
      <image class='map-image' src="{{map[count]}}" mode="aspectFit"></image>
    </view>
    <view class='button'>
      <button wx:for="{{day}}" wx:key="{{item}}" id="{{item}}" type="{{buttonType[item-1]}}" plain="true" bindtap='changeDay'>D{{item}}</button>
    </view>
    <view class='route'>
      <text class='route-text'>{{route[count]}}</text>
    </view>
  </view> 
  <!-- <web-view class="xxx" src="https://m.amap.com/roadbook/index/id=5b1747d6373a804364e330a7&src=roadbook_qrcode"></web-view> -->
  <view class="bar">
    <image class="bar-icon" src="{{starUrl}}" bindtap="changeStar"></image>
     <button class="share-button" open-type="share"> 
      <image class="bar-icon" src="/mocks/img/share.png"></image>
     </button>  
  </view>
</view>