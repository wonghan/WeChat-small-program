/**index.wxss**/
.swiper{
  padding: 0 10px; 
  margin: 10px 0;
}
.swiper-img{
  width: 100vw;
}
.title{
  display: flex;
  justify-content: center;
}
.title-text{
  font-weight:bold;
  letter-spacing:1px;
}
.list{
  display: flex;
  flex-direction: column;
  margin-top: 10px;
}
.list-item{
  margin: 0 10px;
  padding: 10px 0;
  display: flex; 
  height: 80px;
  border-top:1rpx solid #d9d9d9;
}
.list-item-img{
  height: 80px;
  width: 80px;
  margin-right: 10px;
  flex:1;
}
.list-item-text{
  flex:3;
}
.list-item-text-title{
  font-weight: bold;
  color: #000;
  height: 25px;
}
.list-item-text-profile{
  height: 55px;
  overflow: hidden;
  color: #888;
  font-size: 12px;
}